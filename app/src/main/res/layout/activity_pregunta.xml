<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pregunta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chus.aplicaciontrivial.interfaz.ActivityPregunta">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BotonRespuesta2"
        android:layout_alignStart="@+id/BotonRespuesta2"
        android:id="@+id/BotonRespuesta3"
        android:layout_alignEnd="@+id/BotonRespuesta2"
        android:onClick="compruebaRespuesta"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BotonRespuesta3"
        android:layout_alignStart="@+id/BotonRespuesta3"
        android:id="@+id/BotonRespuesta4"
        android:layout_alignEnd="@+id/BotonRespuesta3"
        android:onClick="compruebaRespuesta"/>

    <TextView
        android:text="PuntuaciÃ³n:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/BotonRespuesta4"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/BotonRespuesta4"
        android:id="@+id/textViewPuntuacion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewPuntuacion"
        android:layout_alignEnd="@+id/BotonRespuesta4"
        android:id="@+id/textViewPuntos"
        android:text="0"
        android:layout_alignBottom="@+id/textViewPuntuacion"
        android:layout_toEndOf="@+id/textViewPuntuacion"
        android:textAlignment="textEnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoPregunta"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="                                         "
        android:layout_marginTop="41dp"
        android:minHeight="100dp"
        android:maxHeight="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:text="                                                                                  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDummy"
        android:layout_above="@+id/textoPregunta"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_below="@+id/textoPregunta"
        android:layout_alignStart="@id/textViewDummy"
        android:layout_alignEnd="@id/textViewDummy"
        android:scaleType="fitEnd" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BotonRespuesta1"
        android:onClick="compruebaRespuesta"
        android:layout_below="@+id/floatingActionButtonVoz"
        android:layout_alignEnd="@+id/textViewDummy"
        android:layout_alignStart="@+id/textViewDummy" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/cast_ic_notification_forward"
        android:id="@+id/floatingActionButtonVoz"
        android:layout_below="@+id/imageView"
        android:paddingTop="200dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BotonRespuesta2"
        android:onClick="compruebaRespuesta"
        android:layout_below="@+id/BotonRespuesta1"
        android:layout_alignStart="@+id/BotonRespuesta1"
        android:layout_alignEnd="@+id/BotonRespuesta1" />

</RelativeLayout>
